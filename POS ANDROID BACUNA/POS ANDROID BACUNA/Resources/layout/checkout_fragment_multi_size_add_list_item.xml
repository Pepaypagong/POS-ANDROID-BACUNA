<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="#f0f0f0"
    android:layout_marginBottom="5dp"
    >
    <TextView
        android:id="@+id/txtItemId"
        android:layout_width="0dp"
        android:layout_height="0dp"
    />
    <TextView
        android:id="@+id/txtItemPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
    />
    <CheckBox
        android:id="@+id/cbSizeAndPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select all"
        android:textSize="15sp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
    />
    <LinearLayout
        android:id="@+id/llQtyHolder"
        android:orientation="horizontal"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:weightSum="200"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/txtQtyToZero"
            android:text="0"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorPrimary"
            android:background="?android:attr/colorAccent"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
        />
        <TextView
            android:id="@+id/txtQtyMinus1"
            android:text="-1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorPrimary"
            android:background="?android:attr/colorAccent"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
        />
        <TextView
            android:id="@+id/txtQty"
            android:textSize="17sp"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="0"
            android:background="@drawable/borderbottom"
        />
        <TextView
            android:id="@+id/txtQtyPlus1"
            android:text="+1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorPrimary"
            android:background="?android:attr/colorAccent"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="bottom"
        />
        <TextView
            android:id="@+id/txtQtyPlus6"
            android:text="+6"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorPrimary"
            android:background="?android:attr/colorAccent"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
        />
        <TextView
            android:id="@+id/txtQtyPlus12"
            android:text="+12"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorPrimary"
            android:background="?android:attr/colorAccent"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
        />
    </LinearLayout>
</RelativeLayout>
