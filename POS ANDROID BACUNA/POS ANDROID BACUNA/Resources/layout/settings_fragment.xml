
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/mtrl_toolbar_default_height">
    <RelativeLayout
        android:id="@+id/rlSettingsGeneral"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:padding="14dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/imgSettingsGeneralImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/settings_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
        />
        <TextView
            android:id="@+id/txtSettingsGeneralText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="General"
            android:layout_toRightOf="@id/imgSettingsGeneralImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
        />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_icon_round"
            android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <View
        android:id="@+id/lineSettingsGeneral"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#808080"
        android:layout_below="@id/rlSettingsGeneral"
    />
    <RelativeLayout
        android:id="@+id/rlSettingsBusinessInfo"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:padding="14dp"
        android:layout_below="@id/lineSettingsGeneral"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/imgSettingsBusinessInfoImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/store_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
        />
        <TextView
            android:id="@+id/txtSettingsBusinessInfoText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Business Information"
            android:layout_toRightOf="@id/imgSettingsBusinessInfoImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
        />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_icon_round"
            android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <View
        android:id="@+id/lineBusinessInfo"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#808080"
        android:layout_below="@id/rlSettingsBusinessInfo"
    />
    <RelativeLayout
        android:id="@+id/rlSettingsPrinter"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:padding="14dp"
        android:layout_below="@id/lineBusinessInfo"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/imgSettingsPrinterImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/printer_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
        />
        <TextView
            android:id="@+id/txtSettingsPrinterText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Printer"
            android:layout_toRightOf="@id/imgSettingsPrinterImage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
        />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_icon_round"
            android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#808080"
        android:layout_below="@id/rlSettingsPrinter"
    />

</RelativeLayout>