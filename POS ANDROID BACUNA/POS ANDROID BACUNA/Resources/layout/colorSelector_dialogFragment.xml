<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:minHeight="300dp">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimaryDark">
        <TextView android:id="@+id/groupname"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="label color"/>
        <ImageButton
            android:id="@+id/btnPricingTypeClose"
            android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>
    </RelativeLayout>
    <GridLayout
        android:id="@+id/glNumPad"
        android:layout_below="@id/rlHeader"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:columnCount="3"
        android:rowCount="3">
        <View
            android:id="@+id/viewColor1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#FECA40"
        />
        <View
            android:id="@+id/viewColor2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#FF8552"
        />
        <View
            android:id="@+id/viewColor3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#FE4E4E"
        />
        <View
            android:id="@+id/viewColor4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#CE7EA5"
        />
        <View
            android:id="@+id/viewColor5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#8ABBFE"
        />
        <View
            android:id="@+id/viewColor6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#0E3B65"
        />
        <View
            android:id="@+id/viewColor7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#454E5F"
        />
        <View
            android:id="@+id/viewColor8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#2D2E29"
        />
        <View
            android:id="@+id/viewColor9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1" 
            android:layout_rowWeight="1"
            android:background="#82D273"
        />
        
    </GridLayout>
    
</RelativeLayout>