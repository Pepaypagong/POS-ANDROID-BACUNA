<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTransactionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Transaction #: 20021"
    />
    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Date: DEC 5, 2020 7:00 AM"
    />
    <TextView
        android:id="@+id/txtCashier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Cashier: Jeffrey Bacuna"
    />
    <TextView
        android:id="@+id/txtRunnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Runner: Jeffrey Bacuna"
    />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightBlack"
    />
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="[(Size) Item name]"
        />
        <TextView
            android:id="@+id/lblOrigAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text=""
            android:layout_alignParentRight="true"
        />
        <TextView
            android:id="@+id/lblQtyxPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="[Qty.] * [Price]"
            android:layout_below="@id/lblSize"
        />
        <TextView
            android:id="@+id/lblDiscountedAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="[Subtotal Amt.]"
            android:layout_alignParentRight="true"
            android:layout_below="@id/lblOrigAmt"
        />
        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightBlack"
            android:layout_below="@id/lblDiscountedAmt"
        />
    </RelativeLayout>
    
</LinearLayout>