<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/lblListItem"
        android:layout_weight="45"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:text="test"
        android:textColor="@color/colorLightBlack"
        android:textStyle="bold"/>
    <RelativeLayout
        android:id="@+id/rlPriceContainer"
        android:layout_weight="55"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblWsTitle"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="WHOLESALE"
        />
        <TextView
            android:id="@+id/txtWsPrice"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="P100.00"
        />
        <TextView
            android:id="@+id/lblRetailTitle"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblWsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="RETAIL"
        />
        <TextView
            android:id="@+id/txtRetailPrice"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtWsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="P150.00"
        />
        <TextView
            android:id="@+id/lblRunnerTitle"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblRetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:text="RUNNER"
        />
        <TextView
            android:id="@+id/txtRunnerPrice"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtRetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="P130.00"
        />
    </RelativeLayout>
</LinearLayout>