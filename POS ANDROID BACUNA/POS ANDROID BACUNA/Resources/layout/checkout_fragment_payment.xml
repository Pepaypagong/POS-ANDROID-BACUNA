
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
    />

    <LinearLayout
        android:id="@+id/llContents"
        android:layout_below="@id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <RelativeLayout
            android:layout_weight="80"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/txtAmtToPay"
                android:text="P 1,000,000.00"
                android:textColor="@color/colorLightBlack"
                android:textSize="50sp"
                android:layout_above="@id/viewVerticalCenterLine"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/viewVerticalCenterLine"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerInParent="true"
            />
            <Button
                android:id="@+id/btnSaveOrder"
                android:text="Save Order"
                android:textSize="16sp"
                android:textColor="@color/colorLightBlack"
                android:background="@drawable/buttoncheckoutroundbordernoitem"
                android:layout_below="@id/viewVerticalCenterLine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
            />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llPaymentMethods"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:id="@+id/rlCash1"
                android:background="@drawable/grayborder"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rlCash2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/imgCash"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/money_icon"
                        android:tint="?android:attr/colorAccent"/>
                    <TextView
                        android:id="@+id/txtCash"
                        android:text="Cash"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/colorAccent"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/imgCash"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlCheck1"
                android:background="@drawable/grayborder"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rlCheck2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/imgCheck"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/cheque_icon"
                        android:tint="@color/colorLightBlack"
                    />
                    <TextView
                        android:id="@+id/txtCheck"
                        android:text="Check"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorLightBlack"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/imgCheck"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llSaveButtonContainer"
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#fff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true">
        <Button
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="30dp"
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@drawable/buttonCheckoutRoundBorderWithItem"
            android:text="Next"
            android:textColor="?android:attr/colorPrimary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/right_icon_round_white"
        />
    </LinearLayout>

</RelativeLayout>