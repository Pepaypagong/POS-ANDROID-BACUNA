<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme"
        app:itemIconTint="?attr/colorPrimaryDark"
    />

    <ScrollView
        android:id="@+id/svContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_below="@id/toolbarTitle">
        <RelativeLayout
            android:background="?attr/colorPrimary"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
            />
            <TextView
                android:id="@+id/txtAddressLine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtCompanyName"
            />
            <TextView
                android:id="@+id/txtAddressLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtAddressLine1"
            />
            <TextView
                android:id="@+id/txtContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtAddressLine2"
                android:layout_marginBottom="30dp"
            />

            <LinearLayout
                android:id="@+id/lltransactionHeader"
                android:layout_below="@id/txtContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/includeHeader"
                    layout="@layout/transactions_fragment_receipt_preview_header"
                />
            </LinearLayout>
             
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvReceipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lltransactionHeader"
            />
            <LinearLayout
                android:id="@+id/lltransactionFooter"
                android:layout_below="@id/rvReceipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/transactions_fragment_receipt_preview_footer"
                />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llReceiptOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_alignParentBottom="true"
        android:weightSum="400"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llPdf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:background="@drawable/grayborder"
            android:weightSum="100">
            <ImageView
                android:layout_gravity="bottom|center"
                android:id="@+id/imgPdf"
                android:layout_weight="65"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/pdf_icon"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="7dp"
            />
            <TextView
                android:id="@+id/txtPdf"
                android:layout_weight="35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/colorPrimary"
                android:text="PDF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center|top"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:background="@drawable/grayborder"
            android:weightSum="100">
            <ImageView
                android:layout_gravity="bottom|center"
                android:id="@+id/imgEmail"
                android:layout_weight="65"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/email_icon"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="7dp"
            />
            <TextView
                android:id="@+id/txtEmail"
                android:layout_weight="35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/colorPrimary"
                android:text="Email"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center|top"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llPrint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:background="@drawable/grayborder"
            android:weightSum="100">
            <ImageView
                android:layout_gravity="bottom|center"
                android:id="@+id/imgPrint"
                android:layout_weight="65"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/print_icon"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="7dp"
            />
            <TextView
                android:id="@+id/txtPrint"
                android:layout_weight="35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Print"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center|top"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:background="@drawable/grayborder"
            android:weightSum="100">
            <ImageView
                android:layout_gravity="bottom|center"
                android:id="@+id/imgShare"
                android:layout_weight="65"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/share_icon"
                android:tint="@color/colorPrimary"
                android:layout_marginTop="7dp"
            />
            <TextView
                android:id="@+id/txtShare"
                android:layout_weight="35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Share"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center|top"
            />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>