<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlurredBackground2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/AppTheme"
        app:itemIconTint="?attr/colorPrimaryDark"
        app:titleTextAppearance="@style/ToolbarTitleTheme"
    />

    <TextView
        android:id="@+id/lblRunnerName"
        android:text="Runner name"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarTitle"
    />
    <TextView
        android:id="@+id/txtRunnerName"
        android:text="Jeffrey Bacuña"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarTitle"
        android:layout_alignParentRight="true"
    />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvList"
        android:background="@color/colorPrimary"
        android:splitMotionEvents="false"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lblRunnerName"
    />
</RelativeLayout>