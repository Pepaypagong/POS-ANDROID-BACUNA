
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarCheckoutCartNumpadDiscount"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/AppThemeRedMenuColor"
        android:theme="@style/AppThemeRedMenuColor"
        app:itemIconTint="?attr/colorPrimaryDark"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_below="@id/toolBarCheckoutCartNumpadDiscount">
        <RelativeLayout
            android:id="@+id/llTextBoxHolder"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent">
            <GridLayout
                android:id="@+id/glContents"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:columnCount="1">
                <RelativeLayout
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp">
                    <TextView
                        android:id="@+id/txtItemNameAndQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorLightBlack"
                        android:text="(S) Pants Black X 99"
                        android:gravity="center"
                    />
                    <TextView
                        android:id="@+id/txtDiscountedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_centerInParent="true"
                        android:text="P99,999.00"
                        android:textColor="@color/colorLightBlack"
                        android:layout_below="@id/txtItemNameAndQty"
                    />
                    <TextView
                        android:id="@+id/txtOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:text="P66,666.00"
                        android:textColor="@color/jepoyGray"
                        android:layout_below="@id/txtDiscountedPrice"
                        android:background="@drawable/strikethrough_line"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlCashDiscount"
                    android:layout_gravity="fill_horizontal"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtCashDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:text="Cash discount"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                    />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtCashDiscount">
                        <EditText
                            android:id="@+id/etCashDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="P100.00"
                            android:textColor="@color/colorLightBlack"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:backgroundTint="@color/colorAccent"
                        />
                        <ImageView
                            android:id="@+id/imgCashDiscountCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="@drawable/check_icon"
                            android:backgroundTint="@color/colorAccent"
                        />
                    </FrameLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlPercentageDiscount"
                    android:layout_gravity="fill_horizontal"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                     <TextView
                        android:id="@+id/txtPercentageDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:text="Percentage discount"
                        android:drawableTint="@color/colorAccent"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                     />
                     <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtPercentageDiscount">
                        <EditText
                            android:id="@+id/etPercentageDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00%"
                            android:textSize="25sp"
                            android:textColor="@color/colorBlurred"
                            android:textAlignment="center"
                            android:backgroundTint="@color/colorBlurred"
                        />
                        <ImageView
                            android:id="@+id/imgPercentageDiscountCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:background="@null"
                            android:backgroundTint="@color/colorAccent"
                        />
                    </FrameLayout>
                </RelativeLayout>
            </GridLayout>
        </RelativeLayout>
        <GridLayout
            android:id="@+id/glNumPadDiscount"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:columnCount="3"
            android:rowCount="4">
            <TextView
                android:id="@+id/txtNumpadOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="1"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="2"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="3"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="4"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="5"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="6"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadSeven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="7"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadEight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="8"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadNine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="9"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadBackSpace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="Del"
                android:textColor="@color/colorRed"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadZero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadCheckDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="Apply"
                android:textColor="@color/colorAccent"
                android:background="@drawable/borderTop"
            />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>