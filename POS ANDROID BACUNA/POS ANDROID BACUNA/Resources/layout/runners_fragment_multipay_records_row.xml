<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="10dp">
    <TextView
        android:id="@+id/txtDatePaid"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="2dp"
    />
    <TextView
        android:id="@+id/txtDateRange"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/txtDatePaid"
    />
    <TextView
        android:id="@+id/txtTransactions"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/txtDateRange"
    />
    <TextView
        android:id="@+id/lblReceiptAmount"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Receipt amount:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/txtTransactions"
    />
    <TextView
        android:id="@+id/txtReceiptAmount"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtTransactions"
    />
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/lblReceiptAmount"
        android:background="@color/lightGray"
    />
    <TextView
        android:id="@+id/txtId"
        android:layout_width="0dp"
        android:layout_height="0dp"
    />
</RelativeLayout>

