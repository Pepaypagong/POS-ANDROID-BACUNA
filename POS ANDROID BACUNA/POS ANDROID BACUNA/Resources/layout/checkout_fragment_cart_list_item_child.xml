<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llCartChildItem"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:weightSum="300"
    android:background="@color/colorPrimary">
        <LinearLayout
            android:id="@+id/llItemsOnCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:background="@drawable/grayborder"
            android:weightSum="100">
            <ImageView
                android:layout_gravity="bottom|center"
                android:id="@+id/imgItemQty"
                android:layout_weight="65"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/products_icon"
            />
            <TextView
                android:id="@+id/txtItemQtyOnCart"
                android:layout_weight="35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2 Item"
                android:textColor="@color/colorLightBlack"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center|top"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llItemPriceOnCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:background="@drawable/grayborder"
            android:weightSum="100">
            <ImageView
                android:layout_gravity="bottom|center"
                android:id="@+id/imgItemPrice"
                android:layout_weight="65"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/peso_icon"
            />
            <TextView
                android:id="@+id/txtItemPrice"
                android:layout_weight="35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/colorLightBlack"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="P 100.00"
                android:gravity="center|top"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llItemDiscountOnCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:background="@drawable/grayborder"
            android:weightSum="100">
            <ImageView
                android:layout_gravity="bottom|center"
                android:id="@+id/imgItemDiscount"
                android:layout_weight="65"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/discount_icon"
                android:tint="@color/colorRed"
            />
            <TextView
                android:id="@+id/txtItemDiscount"
                android:layout_weight="35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="DISCOUNT"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:gravity="center|top"
            />
        </LinearLayout>
</LinearLayout>