<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlurredBackground2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
    />

    <TextView
        android:id="@+id/lblRunnerName"
        android:text="Runner name"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarTitle"
    />
    <TextView
        android:id="@+id/txtRunnerName"
        android:text="Jeffrey Bacuña"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarTitle"
        android:layout_alignParentRight="true"
    />
    <TextView
        android:id="@+id/lblStartDate"
        android:text="Start date"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblRunnerName"
    />
    <TextView
        android:id="@+id/txtStartDate"
        android:text="SUN, 22/OCT/2020"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRunnerName"
        android:layout_alignParentRight="true"
    />
    <TextView
        android:id="@+id/lblEndDate"
        android:text="End date"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblStartDate"
    />
    <TextView
        android:id="@+id/txtEndDate"
        android:text="SUN, 22/OCT/2020"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtStartDate"
        android:layout_alignParentRight="true"
    />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvList"
        android:background="@color/colorPrimary"
        android:splitMotionEvents="false"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lblEndDate"
    />
    <Button
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttoncheckoutroundborderwithitem"
        android:text="Pay P 1,200.00 from 10 sales"
        android:textColor="?android:attr/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
    />
</RelativeLayout>