<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/viewDivider0"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightBlack"
    />
    <TextView
        android:id="@+id/lblGrandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="GRAND TOTAL:"
        android:textStyle="bold"
        android:layout_below="@id/viewDivider0"
    />
    <TextView
        android:id="@+id/txtGrandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="P1,000.00"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_below="@id/viewDivider0"
    />
    <TextView
        android:id="@+id/lblCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Cash:"
        android:textStyle="normal"
        android:layout_below="@id/lblGrandTotal"
    />
    <TextView
        android:id="@+id/txtCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="P1,000.00"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtGrandTotal"
        android:textStyle="normal"
    />
    <TextView
        android:id="@+id/lblCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Check:"
        android:textStyle="normal"
        android:layout_below="@id/lblCash"
    />
    <TextView
        android:id="@+id/txtCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="P1,000.00"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtCash"
        android:textStyle="normal"
    />
    <TextView
        android:id="@+id/lblChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="Change:"
        android:textStyle="normal"
        android:layout_below="@id/lblCheck"
    />
    <TextView
        android:id="@+id/txtChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="P1,000.00"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtCheck"
        android:textStyle="normal"
    />
    <View
        android:id="@+id/viewDivider"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightBlack"
        android:layout_below="@id/lblChange"
    />
    <TextView
        android:id="@+id/txtFooterLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="PLEASE COME AGAIN, THANK YOU."
        android:layout_centerHorizontal="true"
        android:layout_below="@id/viewDivider"
    />
    <TextView
        android:id="@+id/txtDatePrinted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="5 DECEMBER 2020 8:00 AM"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtFooterLine1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
    />
</RelativeLayout>