
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarCheckoutCartNumpad"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/AppTheme"
        app:itemIconTint="?attr/colorPrimaryDark"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_below="@id/toolBarCheckoutCartNumpad">
        <RelativeLayout
            android:id="@+id/llTextBoxHolder"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/txtOldQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Qty :"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_above="@id/etOldQty"
            />
            <EditText
                android:id="@+id/etOldQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="25sp"
                android:textAlignment="center"
                android:backgroundTint="@color/jepoyGray"
                android:enabled="false"
                android:layout_above="@id/txtNewQty"
                android:layout_marginBottom="15dp"
            />
            <TextView
                android:id="@+id/txtNewQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Quantity :"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_centerInParent="true"
            />
            <EditText
                android:id="@+id/etNumpadValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30sp"
                android:textAlignment="center"
                android:backgroundTint="@color/colorAccent"
                android:layout_below="@id/txtNewQty"
            />
            <TextView
                android:id="@+id/txtRemoveItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove from cart"
                android:textColor="@color/colorRed"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_below="@id/etNumpadValue"
                android:layout_marginTop="14dp"
            />
        </RelativeLayout>
        <GridLayout
            android:id="@+id/glNumPad"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:layout_width="match_parent"
            android:columnCount="3"
            android:rowCount="4">
            <TextView
                android:id="@+id/txtNumpadOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="1"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="2"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="3"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="4"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="5"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="6"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadSeven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="7"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadEight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="8"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadNine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="9"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadBackSpace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="Del"
                android:textColor="@color/colorRed"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadZero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadCheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="OK"
                android:textColor="@color/colorAccent"
                android:background="@drawable/borderTop"
            />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>