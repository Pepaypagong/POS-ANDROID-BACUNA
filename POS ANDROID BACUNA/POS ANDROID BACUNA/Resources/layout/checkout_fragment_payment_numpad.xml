
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
    />

    <LinearLayout
        android:id="@+id/llContents"
        android:layout_below="@id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <RelativeLayout
            android:id="@+id/rlAmountContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45">
            <TextView
                android:id="@+id/txtLabelAmountReceived"
                android:textSize="15dp"
                android:text="AMOUNT RECEIVED"
                android:textColor="@color/colorTextDisabled"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/etAmountReceived"
            />
            <EditText
                android:id="@+id/etAmountReceived"
                android:textSize="50dp"
                android:text="P 100.00"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
            />
            <TextView
                android:id="@+id/txtBalanceAndChange"
                android:textSize="15dp"
                android:text="Balance: P200.00"
                android:textStyle="bold"
                android:textColor="@color/colorTextDisabled"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etAmountReceived"
            />
            <TextView
                android:id="@+id/txtAmountToPay"
                android:textSize="16dp"
                android:text="Amount to pay: P10,200.00"
                android:textColor="@color/colorLightBlack"
                android:background="@color/lightGray"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        <GridLayout
            android:id="@+id/glNumpad"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:layout_width="match_parent"
            android:columnCount="3"
            android:rowCount="4">
            <TextView
                android:id="@+id/txtNumpadOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="1"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="2"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="3"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="4"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="5"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="6"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadSeven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="7"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadEight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="8"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadNine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="9"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadBlank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text=""
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadZero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="0"
                android:background="@drawable/borderTop"
            />
            <TextView
                android:id="@+id/txtNumpadBackSpace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" 
                android:layout_rowWeight="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="26sp"
                android:gravity="center"
                android:text="Del"
                android:textColor="@color/colorRed"
                android:background="@drawable/borderTop"
            />
        </GridLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llSaveButtonContainer"
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#fff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true">
        <Button
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="30dp"
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@drawable/buttonCheckoutRoundBorderWithItem"
            android:text="Next"
            android:textColor="?android:attr/colorPrimary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/right_icon_round_white"
        />
    </LinearLayout>

</RelativeLayout>