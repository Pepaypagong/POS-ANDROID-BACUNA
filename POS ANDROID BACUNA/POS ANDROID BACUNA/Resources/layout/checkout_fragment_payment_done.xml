
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rlRunnerBalance"
        android:padding="20dp"
        android:background="@color/lightGray"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/imgRunnerIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/customer_icon"
            android:backgroundTint="@color/orange"
            android:layout_centerVertical="true"
        />
        <TextView
            android:id="@+id/txtRunnerName"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgRunnerIcon"
        />
        <TextView
            android:id="@+id/txtUpdatedBalance"
            android:textColor="@color/colorRed"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgCheckDone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txtDone"
        android:background="@drawable/done_icon"
        android:backgroundTint="?android:attr/colorAccent"
    />
    <TextView
        android:id="@+id/txtDone"
        android:text="Done"
        android:textColor="@color/colorLightBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtTotalSaleAmount"
        android:text="P 100.00"
        android:textColor="@color/colorLightBlack"
        android:textSize="50sp"
        android:layout_below="@id/txtDone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtChange"
        android:text="P 100.00"
        android:textColor="@color/colorLightBlack"
        android:textSize="20sp"
        android:layout_below="@id/txtTotalSaleAmount"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <Button
        android:id="@+id/btnReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/buttoncheckoutroundbordernoitemGray"
        android:shadowColor="@color/transparent"
        android:text="Receipt"
        android:textColor="@color/colorLightBlack"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingRight="30dp"
        android:paddingLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:drawableLeft="@drawable/receipt_icon_resized"
        android:layout_above="@id/btnNewSale"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
    />
    <Button
        android:id="@+id/btnNewSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/buttonCheckoutRoundBorderWithItem"
        android:text="Start a new sale"
        android:textColor="?android:attr/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
    />

</RelativeLayout>