
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
    />

    <RelativeLayout
        android:id="@+id/rlRunnerInfo"
        android:layout_below="@id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlurredBackground2">
        <android.support.v7.widget.CardView 
            android:id="@+id/cardViewItemImageHolder"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#000"
            android:background="#000"
            android:layout_centerHorizontal="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="fitXY"
                />
                <TextView
                    android:id="@+id/TxtRunnerAlias"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="30sp"
                    android:text="JB"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
         </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/txtRunnerName"
            android:text="Jeffrey Bacuna"
            android:textColor="@color/colorLightBlack"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@id/cardViewItemImageHolder"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llContents"
        android:layout_below="@id/rlRunnerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/lblTransactionDateTime"
            android:text="Date and time"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
        
        <ImageView
            android:id="@+id/imgGetCurrentDateTime"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:layout_toLeftOf="@id/txtTransactionDate"
            android:background="@drawable/remove_icon"
        />
        <TextView
            android:id="@+id/txtTransactionDate"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="15/AUG/2020"
            android:textColor="@color/colorLightBlack"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txtTransactionTime"
        />
        <TextView
            android:id="@+id/txtTransactionTime"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="8:59 PM"
            android:textColor="@color/colorLightBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"
        />
        <View
            android:id="@+id/viewLine0"
            android:layout_below="@id/lblTransactionDateTime"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/lblCurrActBal"
            android:text="Current account balance"
            android:textSize="16sp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/viewLine0"
        />
        <TextView
            android:id="@+id/txtCurrentAccountBalance"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="P 100.00"
            android:textColor="@color/colorRed"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/viewLine0"
        />
        <View
            android:id="@+id/viewLine1"
            android:layout_below="@id/lblCurrActBal"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/imgPayLater"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/viewLine1"
            android:background="@drawable/down_arrow_icon"
            android:backgroundTint="@color/colorRed"
        />
        <TextView
            android:id="@+id/lblPayLater"
            android:text="New Unpaid"
            android:textSize="16sp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewLine1"
            android:layout_toRightOf="@id/imgPayLater"
        />
        <TextView
            android:id="@+id/txtPayLaterAmount"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="P 100.00"
            android:textColor="@color/colorRed"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewLine1"
            android:layout_alignParentRight="true"
        />
        <View
            android:id="@+id/viewLine2"
            android:layout_below="@id/lblPayLater"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/lblNewActBal"
            android:text="New Balance"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/viewLine2"
        />
        <TextView
            android:id="@+id/txtNewAccountBalance"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="P 100.00"
            android:textColor="@color/colorRed"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/viewLine2"
        />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/llSaveButtonContainer"
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#fff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true">
        <Button
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="30dp"
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@drawable/buttonCheckoutRoundBorderWithItemRed"
            android:text="Get paid later P100.00"
            android:textColor="?android:attr/colorPrimary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/right_icon_round_white"
        />
    </LinearLayout>

</RelativeLayout>