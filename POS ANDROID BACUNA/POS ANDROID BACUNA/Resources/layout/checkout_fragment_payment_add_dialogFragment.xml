<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorLightBlack"
        android:layout_marginBottom="2dp">
        <TextView 
            android:id="@+id/txtTitle"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment methodsss"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llPaymentMethods"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_below="@id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:id="@+id/rlCash1"
            android:background="@drawable/grayborder"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rlCash2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgCash"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/money_icon"
                    android:tint="@color/colorLightBlack"/>
                <TextView
                    android:id="@+id/txtCash"
                    android:text="Cash"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorLightBlack"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/imgCash"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlCheck1"
            android:background="@drawable/grayborder"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rlCheck2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgCheck"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cheque_icon"
                    android:tint="@color/colorLightBlack"
                />
                <TextView
                    android:id="@+id/txtCheck"
                    android:text="Check"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorLightBlack"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/imgCheck"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnBottomCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/buttoncheckoutroundbordernoitemGray"
        android:shadowColor="@color/transparent"
        android:text="Cancel"
        android:textColor="@color/colorLightBlack"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/llPaymentMethods"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
    />
   
</RelativeLayout>
