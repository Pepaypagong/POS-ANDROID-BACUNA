<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="(1x) Pants Black"
    />
    <TextView
        android:id="@+id/txtQtyAndPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="4 pcs * 300.00"
        android:layout_below="@id/txtItemName"
    />
    <TextView
        android:id="@+id/txtOrigAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="(1x) Pants Black"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
    />
    <TextView
        android:id="@+id/txtDiscountedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="P1,000.00"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtOrigAmount"
    />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:layout_width="5dp"
        android:layout_height="1dp"
        android:background="@color/colorLightBlack"
        android:layout_below="@id/txtQtyAndPrice"
    />
</RelativeLayout>