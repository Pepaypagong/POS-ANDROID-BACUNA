<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/AppTheme"
        app:itemIconTint="?attr/colorPrimaryDark"
    />

    <ScrollView
        android:id="@+id/svContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarTitle">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llDateRangeTitle"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/calendar_icon"/>
                <TextView
                    android:id="@+id/lblDateRange"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Date Range"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/llStartDate"
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/llDateRangeTitle"
                android:layout_centerHorizontal="true">
                
                <TextView
                    android:id="@+id/txtStartDate"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Start Date"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/txtStartDate"/>
            </RelativeLayout>

            <ImageView  
                android:id="@+id/imgCancelStartDate"
                android:src="@drawable/remove_icon"
                android:visibility="invisible"
                android:layout_toRightOf="@id/llStartDate"
                android:layout_below="@id/llDateRangeTitle"
                android:layout_marginTop="40dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
    
            <RelativeLayout
                android:id="@+id/llEndDate"
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/llStartDate"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/txtEndDate"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="End Date"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/txtEndDate"/>
            </RelativeLayout>
            
            <ImageView  
                android:id="@+id/imgCancelEndDate"
                android:src="@drawable/remove_icon"
                android:visibility="invisible"
                android:layout_toRightOf="@id/llEndDate"
                android:layout_below="@id/llStartDate"
                android:layout_marginTop="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/txtNormalTypefaceRef"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textStyle="normal"
                android:textSize="15sp"
            />
            <TextView
                android:id="@+id/txtLast30Days"
                android:text="Last 30 days"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/borderTopAndRight"
                android:layout_below="@id/llEndDate"/>
            <GridLayout
                android:id="@+id/glFilters"
                android:layout_below="@id/txtLast30Days"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:columnCount="2"
                android:rowCount="2">
                <TextView
                    android:id="@+id/txtToday"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Today"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:background="@drawable/borderTopAndRight"
                />
                <TextView
                    android:id="@+id/txtYesterday"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Yesterday"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:background="@drawable/borderTop"
                />
                <TextView
                    android:id="@+id/txtThisWeek"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="This Week"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:background="@drawable/borderTopAndRight"
                />
                <TextView
                    android:id="@+id/txtLastWeek"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Last Week"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:background="@drawable/borderTop"
                />
                <TextView
                    android:id="@+id/txtThisMonth"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="This Month"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:background="@drawable/borderTopAndRight"
                />
                <TextView
                    android:id="@+id/txtLastMonth"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Last Month"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:background="@drawable/borderTop"
                />
                <TextView
                    android:id="@+id/txtThisYear"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="This Year"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:background="@drawable/borderTopAndRight"
                />
                <TextView
                    android:id="@+id/txtLastYear"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Last Year"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                    android:background="@drawable/borderTop"
                />
            </GridLayout>
            <View
                android:id="@+id/viewVerticalLine"
                android:layout_below="@id/glFilters"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/jepoyGray"
            />

            <TextView
                android:id="@+id/lblTransactionType"
                android:textColor="@color/colorPrimaryDark"
                android:text="Transaction Type"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/viewVerticalLine"/>

            <GridLayout
                android:id="@+id/glTransactionTypes"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_below="@id/lblTransactionType"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:columnCount="2"
                android:rowCount="2">
                <CheckBox
                    android:id="@+id/cbCustomerSales"
                    android:text="Customer Sales"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                />
                <CheckBox
                    android:id="@+id/cbPayLaterUnpaid"
                    android:text="Pay Later (Unpaid)"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                />
                <CheckBox
                    android:id="@+id/cbPayLaterPaid"
                    android:text="Pay Later (Paid)"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                />
            </GridLayout>
            
            <TextView
                android:id="@+id/lblPaymentMethods"
                android:textColor="@color/colorPrimaryDark"
                android:text="Payment Method"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/glTransactionTypes"/>

            <GridLayout
                android:id="@+id/glPaymentMethods"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_below="@id/lblPaymentMethods"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:columnCount="2"
                android:rowCount="2">
                <CheckBox
                    android:id="@+id/cbCash"
                    android:text="Cash"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                />
                <CheckBox
                    android:id="@+id/cbCheck"
                    android:text="Check"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1" 
                    android:layout_rowWeight="1"
                />
            </GridLayout>

            <LinearLayout
                android:id="@+id/llShowCancelledSales"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@id/glPaymentMethods">
                <CheckBox
                    android:id="@+id/cbShowCancelSalesOnly"
                    android:text="Show cancelled sales only"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                />
            </LinearLayout>
            <View
                android:id="@+id/viewVerticalLine2"
                android:layout_below="@id/llShowCancelledSales"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lightGray"
            />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llSaveButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonCheckoutRoundBorderWithItem"
            android:text="APPLY FILTER"
            android:textColor="?android:attr/colorPrimary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerInParent="true"
        />
    </LinearLayout>

</RelativeLayout>