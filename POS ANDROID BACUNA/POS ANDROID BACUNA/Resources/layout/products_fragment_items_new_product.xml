
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/AppTheme"
        app:itemIconTint="?attr/colorPrimaryDark"
    />

    <RelativeLayout
        android:id="@+id/rlContents"
        android:layout_below="@id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlProductAppearanceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/colorBlurredBackground">

            <android.support.v7.widget.CardView 
                android:id="@+id/cardviewProductAppearance"
                android:layout_centerInParent="true"
                android:layout_width="120dp"
                android:layout_height="110dp"
                app:cardBackgroundColor="#454E5f"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:id="@+id/llItemHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="66">
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:scaleType="fitXY"/>
                        <EditText
                            android:id="@+id/etItemAlias"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:theme="@style/EdittextWhite"
                            android:hint="Name"
                            android:textColorHint="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:maxLength="7"
                            android:singleLine="true"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"/>
                    </FrameLayout>
                    
                    <TextView
                        android:id="@+id/txtProductName"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="34"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:background="#44000000"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="Product name"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_gravity="center_horizontal"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/viewColorSelector"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@id/cardviewProductAppearance"
                android:layout_centerVertical="true"
                android:background="#454E5f"
                android:clickable="true"
            />
            <ImageView
                android:id="@+id/imgPictureSelector"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/cardviewProductAppearance"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_gallery"
            />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rlProductInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/rlProductAppearanceContainer">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtInputLayoutProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    
                <EditText
                    android:id="@+id/etProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:textSize="17sp"
                    android:hint="Product Name"
                />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/lblCategory"
                android:layout_below="@id/txtInputLayoutProductName"
                android:text="Category"
                android:textSize="12sp"
                android:visibility="invisible"
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rlProductCat"
                android:layout_below="@id/lblCategory"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtProductCat"
                    android:text="Category"
                    android:textSize="17sp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/abc_ic_arrow_drop_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/viewLineUnderCat"
                    android:background="@color/jepoyGray"
                    android:layout_below="@id/txtProductCat"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/lblDescription"
                android:layout_below="@id/rlProductCat"
                android:text="Description"
                android:textSize="12sp"
                android:visibility="invisible"
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rlProductDescription"
                android:layout_below="@id/lblDescription"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtProductDescription"
                    android:text="Description"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/abc_ic_arrow_drop_right_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/viewLineUnderDescription"
                    android:background="@color/jepoyGray"
                    android:layout_below="@id/txtProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            
            <TextView
                android:id="@+id/txtSizes"
                android:text="Sizes"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@id/rlProductDescription"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgBtnAddSize"
                android:src="@android:drawable/ic_input_add"
                android:layout_alignParentRight="true"
                android:layout_below="@id/rlProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_alignParentLeft="true"
                android:layout_below="@id/imgBtnAddSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/llsizesListHeader"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:weightSum="100"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text=""
                        android:textSize="16sp"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="Wholesale"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:layout_weight="31"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="Retail"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:layout_weight="31"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="Runner"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:layout_weight="31"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/lvProductSizes"
                    android:layout_below="@id/llsizesListHeader"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </RelativeLayout>
        
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llCreateProductButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnCreateProduct"
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonCheckoutRoundBorderWithItem"
            android:text="CREATE PRODUCT"
            android:textColor="?android:attr/colorPrimary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerInParent="true"
        />
    </LinearLayout>

</RelativeLayout>